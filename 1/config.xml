<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
    <!--PICK ONE SOURCE-->
    <!--<source>-->
        <!--<name>twitter</name>-->
        <!--<properties-file>twitter.properties</properties-file>-->
    <!--</source>-->
    <source>
        <name>socket</name>
        <ip>localhost</ip>
        <port>4542</port>
    </source>

    <!--KEY FOR STREAM DATA-->
    <!--<keyBy>-->
        <!--<type>static</type>-->
        <!--<value>1</value>-->
    <!--</keyBy>-->
    <keyBy>
        <type>object</type>
        <function>getId</function>
    </keyBy>


    <!--WINDOW CONFIGURATION-->
    <window>
        <type>sliding</type><!--options: tumbling / sliding / session -->
        <time>process</time><!--options: event / process-->
        <size>
            <hours>0</hours>
            <minutes>5</minutes>
            <seconds>0</seconds>
        </size>
        <overlap>
            <hours>0</hours>
            <minutes>2</minutes>
            <seconds>0</seconds>
        </overlap>
    </window>

    <!--SINK CONFIGURATION-->
    <sourceSink>
        <type>print</type>
    </sourceSink>
    <windowSink>
        <type>print</type>
    </windowSink>


</configuration>
