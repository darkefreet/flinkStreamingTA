    <!--DATA TYPE, FILTERS AND PARTITIONS-->
    <data>
        <type>json</type>
        <id>tx_index</id>
        <filter>{x.size}>=100</filter>
    </data>

    <!--KEY FOR STREAM DATA-->
    <keyBy>
        <type>static</type>
        <value>2</value>
    </keyBy>
    <!--<keyBy>-->
        <!--<type>object</type>-->
        <!--<function>getId</function>-->
    <!--</keyBy>-->

    <!--DATA MINING CONFIGURATION-->
    <dataMining>
        <processingClass>Streamprocess.WindowProcess.WindowDBSCANProcess</processingClass>
        <type>clustering</type>
        <algorithm>dbscan</algorithm>
        <maxDistance>20000.0</maxDistance>
        <minClusters>3</minClusters>
        <distance>euclidean</distance>
        <attributes>
            <attribute>
                <path>x.size</path>
                <type>numeric</type><!--options : "text" | "numeric" -->
                <weight>0.0005</weight><!--for standardized attribute weight-->
                <!--<svdFunction>cosine</svdFunction>-->
            </attribute>
        </attributes>
        <resultsData>
            <path>*</path>
        </resultsData>
    </dataMining>

    <!--WINDOW CONFIGURATION-->
    <window>
        <type>sliding</type><!--options: tumbling / sliding / session -->
        <time>process</time><!--options: event / process-->
        <size>
            <hours>0</hours>
            <minutes>0</minutes>
            <seconds>30</seconds>
        </size>
        <overlap><!--CAN BE IGNORED IF WINDOW TYPE IS TUMBLING OR SESSION-->
            <hours>0</hours>
            <minutes>0</minutes>
            <seconds>15</seconds>
        </overlap>
    </window>

