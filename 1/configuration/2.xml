    <source>
        <name>bitcoin</name>
        <properties-file>bitcoin.properties</properties-file>
    </source>
    <!--<source>-->
        <!--<name>socket</name>-->
        <!--<ip>localhost</ip>-->
        <!--<port>4542</port>-->
