    <textProcess><!--FOR LSD Calculation purposes-->
        <anyText>false</anyText><!-- true : any text want to be analyzed, false : if there is no text to be analyzed-->
        <dataPath>resource/news/</dataPath><!-- path for documents to make SVD Model-->
        <label></label><!-- JSON label for the LSD document category-->
        <resource></resource><!-- JSON label for the LSD document resource to build the model -->
        <function></function><!-- To calculate singular value decomposition. options: "cosine" | "dot" -->
    </textProcess>

    <!--DATA TYPE AND FILTERS-->
    <data>
        <type>json</type>
        <id>op</id>
        <filtersConfiguration>
            <filter>
                <dataType>integer</dataType>
                <attribute>x.size</attribute>
                <value>10</value>
                <comparison>">="</comparison><!--options: ">" | ">=" | "==" | "!=" | "<=" | "<"-->
            </filter>
            <filter>
                <dataType>count</dataType>
                <attribute>x.inputs</attribute>
                <value>1</value>
                <comparison>">="</comparison><!--options: ">" | ">=" | "==" | "!=" | "<=" | "<"-->
            </filter>
        </filtersConfiguration>
    </data>

    <!--KEY FOR STREAM DATA-->
    <keyBy>
        <type>static</type>
        <value>2</value>
    </keyBy>
    <!--<keyBy>-->
        <!--<type>object</type>-->
        <!--<function>getId</function>-->
    <!--</keyBy>-->

    <!--DATA MINING CONFIGURATION-->
    <dataMining>
        <processingClass>Streamprocess.WindowProcess.WindowClusteringProcess</processingClass>
        <type>clustering</type>
        <algorithm>dbscan</algorithm>
        <maxDistance>200.0</maxDistance>
        <minClusters>3</minClusters>
        <distance>euclidean</distance>
        <attributes>
            <attribute>
                <path>x.size</path>
                <type>numeric</type><!--options : "text" | "numeric" -->
                <weight>1.0</weight><!--for standardized attribute weight-->
                <svdFunction>cosine</svdFunction>
            </attribute>
        </attributes>
        <resultsData>
            <path>*</path>
        </resultsData>
    </dataMining>

    <!--WINDOW CONFIGURATION-->
    <window>
        <type>sliding</type><!--options: tumbling / sliding / session -->
        <time>process</time><!--options: event / process-->
        <size>
            <hours>0</hours>
            <minutes>0</minutes>
            <seconds>30</seconds>
        </size>
        <overlap><!--CAN BE IGNORED IF WINDOW TYPE IS TUMBLING OR SESSION-->
            <hours>0</hours>
            <minutes>0</minutes>
            <seconds>15</seconds>
        </overlap>
    </window>

    <!--SINK CONFIGURATION-->
    <windowSink>
        <type>kafka</type>
        <topic>bitcoin</topic>
        <ipPort>localhost:9092</ipPort>
    </windowSink>
